<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainmenu_search_classroom"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/search_classroom_choose"
        android:layout_width="fill_parent"
        android:layout_marginTop="180dip"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/search_classroom_btn_quick"
            android:layout_width="200dip"
            android:layout_marginLeft="50dip"
            android:layout_height="wrap_content"
            android:text="@string/query_classroom_btn_quick" />

        <Button
            android:id="@+id/search_classroom_btn_advance"
            android:layout_width="200dip"
            android:layout_marginLeft="50dip"
            android:layout_height="wrap_content"
            android:text="@string/query_classroom_btn_advanced" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_classroom_advance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_classroom_year"
                android:textColor="@color/black"
                android:textSize="20dip" />

            <Spinner
                android:id="@+id/spinnerYear"
                android:layout_width="260dip"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_classroom_season"
                android:textColor="@color/black"
                android:textSize="20dip" />

            <Spinner
                android:id="@+id/spinnerSeason"
                android:layout_width="260dip"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_classroom_week"
                android:textColor="@color/black"
                android:textSize="20dip" />

            <Spinner
                android:id="@+id/spinnerWeek"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_classroom_day"
                android:textColor="@color/black"
                android:textSize="20dip" />

            <Spinner
                android:id="@+id/spinnerDay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_classroom_area"
                android:textColor="@color/black"
                android:textSize="20dip" />

            <Spinner
                android:id="@+id/spinnerArea"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_classroom_class"
                android:textColor="@color/black"
                android:textSize="20dip" />

            <Spinner
                android:id="@+id/spinnerClass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/query_classroom_type"
                android:textColor="@color/black"
                android:textSize="20dip" />

            <Spinner
                android:id="@+id/spinnerType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/query_classroom_confirm" />
    </LinearLayout>

</LinearLayout>